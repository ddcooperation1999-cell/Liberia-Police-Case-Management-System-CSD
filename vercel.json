{
  "version": 2,
  "framework": "express",
  "buildCommand": "npm install && npm run build",
  "outputDirectory": ".",
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "@JWT_SECRET@",
    "DATABASE_URL": "@DATABASE_URL@"
  },
  "functions": {
    "backend/index.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend-server.js"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "frontend-server.js"
    }
  ]
}
